{
  "author": "Florian Keller <github@floriankeller.de>",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "4.3.1",
    "@material-ui/icons": "4.2.1",
    "mdi-material-ui": "6.2.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-google-charts": "^3.0.14",
    "react-router": "^5.0.1"
  },
  "devDependencies": {
    "@ffflorian/prettier-config": "0.0.5",
    "@ffflorian/tslint-config": "0.5.0",
    "@types/jest": "24.0.17",
    "@types/node": "~12",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-router": "5.0.3",
    "husky": "3.0.3",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "prop-types": "15.7.2",
    "react-scripts": "3.0.1",
    "rimraf": "2.6.3",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --config tslint.json --project tsconfig.json --fix",
      "git add"
    ]
  },
  "name": "luftdaten-site",
  "prettier": "@ffflorian/prettier-config",
  "private": true,
  "scripts": {
    "build:site": "react-scripts build",
    "clear": "rimraf build",
    "dist": "yarn clear && yarn build:site",
    "fix": "yarn fix:other && yarn fix:ts",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts --fix",
    "lint": "yarn lint:ts && yarn lint:other",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "tslint --project tsconfig.json",
    "prettier": "prettier \"*.{json,md}\"",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "version": "1.5.6"
}
